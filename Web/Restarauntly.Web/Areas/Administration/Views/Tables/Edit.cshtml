@model Restarauntly.Web.ViewModels.Tables.EditTableViewModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <h1>Edit Table</h1>

    <div class="mb-3">
        <label asp-for="NumberOfSeatingPlaces" class="form-label"></label>
        <input asp-for="NumberOfSeatingPlaces" class="form-control">
        <span asp-validation-for="NumberOfSeatingPlaces" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BookedTime" class="form-label"></label>
        <input asp-for="BookedTime" class="form-control">
        <span asp-validation-for="BookedTime" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" value="Save" class="btn btn-warning" />
</form>
