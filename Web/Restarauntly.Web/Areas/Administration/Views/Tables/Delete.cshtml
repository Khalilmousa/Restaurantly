@model Restarauntly.Web.ViewModels.Tables.DeleteTableViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <h4>ID:</h4>
    <p>@Model.Id</p>
    <h4>Message:</h4>
    <p>@Model.Message</p>
    <h4>Number of sitting places:</h4>
    <p> @Model.NumberOfSeatingPlaces</p>
    <h4>Created on:</h4>
    <p>@Model.CreatedOn</p>
    <hr />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

