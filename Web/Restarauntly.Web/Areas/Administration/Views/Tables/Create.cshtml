@model Restarauntly.Web.ViewModels.Tables.CreateTableViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfSeatingPlaces" class="control-label"></label>
                <input asp-for="NumberOfSeatingPlaces" class="form-control" />
                <span asp-validation-for="NumberOfSeatingPlaces" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsItBooked" /> @Html.DisplayNameFor(model => model.IsItBooked)
                </label>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="book-a-table-button" />
            </div>
        </form>
    </div>
</div>
