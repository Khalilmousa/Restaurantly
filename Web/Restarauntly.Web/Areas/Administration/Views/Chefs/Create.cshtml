@model Restarauntly.Web.ViewModels.Chefs.CreateChefViewModel
@{
    this.ViewData["Title"] = "Add new Chef";
}

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <h1>Add new chef!</h1>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="JobType" class="form-label"></label>
        <input asp-for="JobType" class="form-control">
        <span asp-validation-for="JobType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Images" class="form-label"></label>
        <input asp-for="Images" class="form-control">
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" />
</form>